{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}
{% block title %}{% endblock %}

{% block body %}

<br>
<div class="container" style="width: 400px">

<h1>Formulaire d'inscription</h1>
<br>

    <!-- 'bootstrap_4_layout.html.twig' -->
    {{ form_start(form) }}
    
    {{ form_row(form.nomUser, {'label': 'Votre Nom'}) }}
    {{ form_row(form.prenomUser, {'label': 'Votre Prénom'}) }}
    {{ form_row(form.emailUser, {'label': 'Votre Adresse email'}) }}
    {{ form_row(form.telUser, {'label': 'Votre numéro de téléphone'}) }}
    {{ form_row(form.mdpUser, {'label': 'Votre Mot de passe'}) }}
    {{ form_row(form.confirmmdp, {'label': 'Confirmez votre Mot de passe'}) }}

    <center>
    <button type="submit" class="btn btn-warning">S'inscrire</button>
    </center>

    {{ form_end(form) }}

</div>
<br><br><br>

{% endblock %}