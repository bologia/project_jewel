{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="/css/actu.css">{% endblock %}
{% block title %}{% endblock %}

{% block body %}

<div class="container">
    <h3>Actualités</h3>

    {% for news in newss | reverse %}

    <div class="jumbotron">
        <h1 align="center" class="display-4">{{ news.titreNews }}</h1>
        <br>
        <div class="row mx-auto">
            <div class="col-md-6">
                <img src="/imag/{{ news.imagNews }}" alt="" width="100%">
            </div>
            <div class="col-md-6">
                <p class="lead">{{ news.textNews }}</p>
                <hr class="my-4">
                <p>Date de publi: {{ news.createdAt | date('d/m/Y') }} à {{ news.createdAt | date('H:i') }}</p>
            </div>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('modifnews', {'id': news.id}) }}">Modifier</a>
        <a href="{{ path('deletenews', {'id': news.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ?')">Supprimer</a>
        {% endif %}
    </div>

    {% else %}
    Pas d'article
    {% endfor %}
        
</div>

{% endblock %}